{
  "name": "appsbrekekecom",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "pret": "eslint --ignore-path=.gitignore --fix . && prettier --ignore-path=.gitignore --loglevel=silent --write \"**/*.{html,scss,json,md}\"",
    "deploy": "yarn build && ssh apps.brekeke.com \"rm -rf /var/www/apps/*\" && scp -r build/. apps.brekeke.com:/var/www/apps"
  },
  "devDependencies": {
    "history": "^4.9.0",
    "humanize-duration": "^3.20.1",
    "mobx": "^5.13.0",
    "mobx-react": "^6.1.1",
    "mobx-react-router": "^4.0.7",
    "normalize.css": "^8.0.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "whatwg-fetch": "^3.0.0"
  },
  "optionalDependencies": {
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@craco/craco": "^5.2.4",
    "circular-dependency-plugin": "^5.0.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react-scripts": "^3.0.1"
  },
  "eslintConfig": {
    "extends": "react-app",
    "parser": "babel-eslint",
    "plugins": [
      "simple-import-sort",
      "prettier",
      "import"
    ],
    "rules": {
      "sort-imports": "off",
      "simple-import-sort/sort": "error",
      "import/first": "error",
      "import/newline-after-import": "error",
      "import/no-duplicates": "error",
      "import/no-extraneous-dependencies": "error",
      "prettier/prettier": "error"
    },
    "settings": {
      "react": {
        "version": "latest"
      }
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
